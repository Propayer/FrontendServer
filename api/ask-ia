import Groq from "groq-sdk";

const groq = new Groq({ apiKey: "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" });

export default async function handler(req, res) {
  if (req.method !== "POST") {
    return res.status(405).json({ error: "Método no permitido" });
  }

  const { message } = req.body;

  if (!message) {
    return res.status(400).json({ error: "Falta el mensaje" });
  }

  try {
    const response = await groq.chat.completions.create({
      messages: [{ role: "user", content: message }],
      model: "llama-3.3-70b-versatile",
    });

    const iaResponse = response.choices[0]?.message?.content || "No se recibió respuesta de la IA.";
    const prefixedResponse = `[IA] ${iaResponse}`;

    return res.status(200).json({ message: prefixedResponse });
  } catch (error) {
    console.error("Error al contactar con la IA:", error);
    return res.status(500).json({ error: "Error interno del servidor" });
  }
}